use_frameworks!

def shared_pods
  pod 'Mapzen-ios-sdk', :path => '.'
end

target "ios-sdk" do
  shared_pods
end

target "MapzenSDK" do
  shared_pods
end

target "MapzenSDKTests" do
  shared_pods
end

target "SampleApp-Objc" do
  shared_pods
end

target "SampleApp-ObjcTests" do
  shared_pods
end
